<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_background">

    <TextView
        android:id="@+id/tv_brawler_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="EEEL PRIMO" />

    <ImageView
        android:id="@+id/iv_brawler"
        android:layout_width="360dp"
        android:layout_height="360dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_brawler_name_detail"
        tools:src="@drawable/edgar" />

    <TextView
        android:id="@+id/tv_start_power_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:layout_marginLeft="8dp"
        android:text="@string/start_power"
        android:textColor="@color/yellow"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler" />

    <TextView
        android:id="@+id/tv_gadget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="@string/gadget"
        android:layout_marginRight="8dp"
        android:textColor="@color/yellow"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_brawler" />

    <TextView
        android:id="@+id/tv_first_power"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_power_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_power_title"
        tools:text="BASHER MKB" />
    <ProgressBar
        android:id="@+id/progressBarDetail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_second_power"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_start_power_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_power"
        tools:text="BASHER MKB" />

    <TextView
        android:id="@+id/tv_second_gadget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_gadget_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_first_gadget"
        tools:text="SHEEEEELY" />

    <TextView
        android:id="@+id/tv_first_gadget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_gadget_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_gadget_title"
        tools:text="MONKEY KING BAR" />


</androidx.constraintlayout.widget.ConstraintLayout>